<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Header H1  -->
    <style name="Header" parent="@android:style/Widget.TextView">
        <!-- Customize your Color and Font -->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">30dp</item>
        <item name="android:background">@color/colorRed</item>

        <item name="android:gravity">center</item>
    </style>

    <!-- Regular Font  -->
    <style name="Reg_font" parent="@android:style/Widget.TextView">
        <!-- Customize your Color and Font -->
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20dp</item>

    </style>

    <style name="Reg_G_font" parent="@android:style/Widget.TextView">
        <!-- Customize your Color and Font -->
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textSize">20dp</item>

    </style>


    <!-- Hint Font  -->
    <style name="Hint_font" parent="@android:style/Widget.EditText">
        <!-- Customize your Color and Font -->
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/border</item>

    </style>

</resources>
