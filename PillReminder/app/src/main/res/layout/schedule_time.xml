<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aplus.pillreminder.fragment.PillBagFragment">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#E71D36"
            android:gravity="center"
            android:text="วันนี้"
            android:textColor="#faf8f8"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="310dp"
            android:layout_marginVertical="100dp"
            app:srcCompat="@drawable/sun" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="100dp"
            app:srcCompat="@drawable/moon2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="310dp"
            android:layout_marginVertical="390dp"
            app:srcCompat="@drawable/sun" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="390dp"
            app:srcCompat="@drawable/moon2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="เย็น"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textIsSelectable="true"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="450dp"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="เย็น"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textIsSelectable="true"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="65dp"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="เช้า"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textIsSelectable="true"
            android:layout_marginHorizontal="315dp"
            android:layout_marginVertical="65dp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="เย็น"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textIsSelectable="true"
            android:layout_marginHorizontal="315dp"
            android:layout_marginVertical="450dp"
            />



    </FrameLayout>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:bb_tabXmlResource="@xml/tabs" />

</LinearLayout>
